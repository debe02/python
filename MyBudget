class MyBudget:
   def __init__(self, food, clothing, entertainment):
        self.food = food
        self.clothing = clothing
        self.entertainment = entertainment


   def deposit(self):                                                                                                                                                                                                                                       
        selectedOption = input('please select an option :')
        if selectedOption == "0":
            print('How much would you like to deposit? %s' %selectedOption)

            cashOption = int (input(''))
            currentBalance = 10000 + cashOption
            print (currentBalance)
   
        elif selectedOption == "1":
            print('How much would you like to Withdraw %s' %selectedOption)

            cashOption = int(input(' '))
            currentBalance = 10000 - cashOption
            print (currentBalance)
            print('Take your cash')
         

        elif selectedOption == "3":
            print('How much would you like to Transfer %s' %selectedOption)
            queryOption = input ('')
            print('Money has been transfered')
        else:
            print('wait')
  
p1 = MyBudget("Rice", "Trousers", "Movies")

